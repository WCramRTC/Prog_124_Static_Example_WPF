<Window x:Class="Prog_124_Static_Example_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog_124_Static_Example_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Canvas Background="#FFB3D4FF">
        <ListBox x:Name="lbPlayers" Height="356" Width="385" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="373" Canvas.Top="21"/>
        
        <Button x:Name="btnAddPlayer" Content="Add Player" Canvas.Left="674" Canvas.Top="382" HorizontalAlignment="Center" VerticalAlignment="Center" Width="84" Height="35" Click="btnAddPlayer_Click" />
        
        <Label Content="Update HP" Canvas.Left="32" Canvas.Top="217" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        
        <TextBox x:Name="txtUpdateHp" Canvas.Left="104" TextWrapping="Wrap" Text="TextBox" Canvas.Top="221" Width="140" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        
        <Button x:Name="btnUpdate" Content="Update" Canvas.Left="259" Canvas.Top="219" HorizontalAlignment="Center" VerticalAlignment="Top" Width="69" Click="btnUpdate_Click" />

    </Canvas>
</Window>
